<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.grade.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/grade_textView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/grade" />

        <EditText
            android:id="@+id/grade_editText1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/show_grade_TextView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"

            android:text="@string/show_grade_TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/grade_textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/grade" />

        <EditText
            android:id="@+id/grade_editText2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:ems="10"
            android:inputType="number" />

        <TextView
            android:gravity="center"
            android:id="@+id/show_grade_TextView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:text="@string/show_grade_TextView" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/grade_textView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/grade" />

        <EditText
            android:id="@+id/grade_editText3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:ems="10"
            android:inputType="number" />

        <TextView
            android:gravity="center"
            android:id="@+id/show_grade_TextView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/show_grade_TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reset_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/reset_button" />

        <Button
            android:id="@+id/ok_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ok_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="right|bottom"
        >

        <Button
            android:padding="32dp"
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next_button" />
    </LinearLayout>

</LinearLayout>
